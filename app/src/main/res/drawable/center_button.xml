<?xml version="1.0" encoding="utf-8"?>
<!-- Shape designed with no rounded edges for UI affect -->
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape xmlns:android="http://schemas.android.com/apk/res/android">
            <solid android:color="@color/theme_background_color" />
            <stroke android:width="1dp" android:color="@color/button_outline" />
            <padding android:left="10dp" android:top="10dp" android:right="10dp" android:bottom="10dp" />
            <corners android:radius="1dp" android:topLeftRadius="0dp" android:topRightRadius="0dp"
                android:bottomLeftRadius="0dp" android:bottomRightRadius="0dp"/>
        </shape>
    </item>
</selector>